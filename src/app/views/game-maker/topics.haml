.topics{"ng-controller" => "TopicsController as vm"}
  .auth{"ng-controller" => "AuthController as auth"}
    %button{"ng-click" => "auth.logOutGameMaker()", :type => "button"} Log out
  .topic{"ng-repeat" => "topic in vm.topics"}
    %h1
      %a{"ui-sref" => "game_maker.topic.quizzes({topicId: topic.id})"}
        %img{:alt => "{{ topic.title }}", :src => "{{ topic.logo['url'] }}"}
        %span {{ topic.title }}
    %p {{ topic.description }}
  %form{"ng-submit" => "vm.addTopic()"}
    %div
      %label{:for => "title"} Title
      %input#title{:name => "title", "ng-model" => "vm.title", :required => "", :type => "text"}
    %br
    %div
      %label{:for => "description"} Description
      %textarea#description{:name => "description", "ng-model" => "vm.description", :required => ""}
    %br
    %div
      %label{:for => "logo"} Logo
      %input#logo{:name => "logo", "ng-model" => "vm.logo", "ngf-select" => "", :type => "file"}
    %br
    %div
      %button{:type => "submit"} Submit

